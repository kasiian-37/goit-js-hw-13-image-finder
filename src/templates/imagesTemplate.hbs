{{#each this}}
<li class="gallery-item" data-large-image={{largeImageURL}}>
    <div class="photo-card">
        <div class="image-wrapper">
            <img class="photo-card__img" src="{{webformatURL}}" alt="{{id}}" />
        </div>

        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up</i>
                {{likes}}
            </p>
            <p class="stats-item">
                <i class="material-icons">visibility</i>
                {{views}}
            </p>
            <p class="stats-item">
                <i class="material-icons">comment</i>
                {{comments}}
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download</i>
                {{downloads}}
            </p>
        </div>
    </div>
</li>
{{/each}}